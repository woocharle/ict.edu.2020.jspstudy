package com.ict.model;

import java.util.ArrayList;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Cmd04 {
	VO_1 vo = new VO_1();
	ArrayList<VO_1> list = new ArrayList<VO_1>();
	
	public void exec_1(HttpServletRequest request, HttpServletResponse response) {
		String name = request.getParameter("name");
		String grd ="";
		int kor= Integer.parseInt(request.getParameter("kor"));
		int eng= Integer.parseInt(request.getParameter("eng"));
		int math= Integer.parseInt(request.getParameter("math"));
		int sum = kor + eng + math;
		double avg = (int)(sum/3.0 * 10)/10.0;
		
		if (avg >= 90) {
			grd = "A";
		} else if (avg >= 80) {
			grd = "B";
		} else if (avg >= 70) {
			grd = "C";
		} else {
			grd = "F";
		}

		vo.setName(name);
		vo.setKor(kor);
		vo.setEng(eng);
		vo.setMath(math);
		vo.setSum(sum);
		vo.setAvg(avg);
		vo.setGrd(grd);
		
	}
		

	
	public int o_sum(String op, String su1, String su2) {
		int sum=0;
		int s1 = Integer.parseInt(su1);
		int s2 = Integer.parseInt(su2);
		
		switch (op) {
			case "+": sum = s1 + s2 ; break;
			case "-": sum = s1 - s2 ; break;
			case "*": sum = s1 * s2 ; break;
			case "/": sum = s1 / s2 ; break;
		}
		
		return sum;
	}
	
	public int salary(int dan, int time) {
		int sum = time > 8 ? (8 * dan) + (int)((time - 8) * 1.5 * dan) : time * dan; 
		return sum;
		
	}
	
}
